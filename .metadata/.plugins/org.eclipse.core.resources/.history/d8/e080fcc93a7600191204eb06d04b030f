            <log/>
            <send>
                <endpoint>
                    <http method="post" uri-template="/users/signin"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
